{
  "extends": "../../tsconfig.build.json",

  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "outDir": "./dist-esm",
    "jsx": "react",
    "esModuleInterop": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },

  "include": [
    "src/**/*", 
    "src/typings/**/*", 
    "src/styled-system/**/*"
  ]
}
